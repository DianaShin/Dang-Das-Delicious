extends layout 

block content
  .inner 
    form.form(method="POST")
      //- NOTE: if you are on an html form, and you leave off the action, 
      //- it will default the action to the current url 
      h2 Reset Your Password 
      label(for="password") Password 
      input(type="password" name="password")
      label(for="password-confirm" name="password-confirm") Confirm Password 
      input(type="password" name="password-confirm")
      input(type="submit" value="Reset Password").button
